#include <stdio.h>

int toplama(int s1, int s2){
	return s1+s2;
}

int main(){

	// degerleri almak icin degiskenleri tanimlandi.
	int s1, s2, secim;
	printf("Hesap Makinesi\n");

	// sayi 1 aliniyor
	printf("\n\t1. sayiyi giriniz: ");
	scanf("%d", &s1);

	// sayi 2 aliniyor
	printf("\n\t2. sayiyi giriniz: ");
	scanf("%d", &s2);


	// birden cok satirli metin bazli degerleri ekrana bastirmak icin parantezler arasinda () 6 tane cif tirnak yazilir: printf("""degerler""");
	printf("""
	1) Toplama +
	2) Cikarma -
	3) Carpma *
	4) Bolme /
	0) Cikti""");

	while (1){

		printf("secim giriniz (sadece 0-4 arasi): "); scanf("%d", &secim);

		if(secim==0){
			printf("cikis yapildi.");
			break;
		} else if(secim==1){
			int toplam=toplama(int s1, int s2);
			printf("\n\ttoplama sonucu: %d", toplam);
		} else if (secim==2){
			cikarma(int s1, int s2);
		} else if (secim==3) {
			carpma(int s1, int s2);
		} else if (secim==4){
			bolme(int s1, int s2);
		} else {
			printf("\n\n\tError in if-else code blocks!");
			break;
		}

	return 0;
}
